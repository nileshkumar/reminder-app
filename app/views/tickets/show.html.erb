<p style="color: green"><%= notice %></p>
<div class="col-lg-8">
  <div class="card shadow">
    <div class="card-body">
      <%= render @ticket %>
    </div>
  </div>
</div>
<div class="mt-5">
  <%= link_to "Edit this ticket", edit_ticket_path(@ticket), class:"btn btn-primary" %> |
  <%= link_to "Back to tickets", tickets_path, class:"btn btn-primary" %>

  <%= button_to "Destroy this ticket", @ticket, method: :delete, class: "btn btn-danger" %>
</div>
